{
  "name": "trillo",
  "version": "1.0.0",
  "description": "Trillo App",
  "main": "index.js",
  "scripts": {
    "watch:sass": "node-sass sass/main.scss css/style.css -w",
    "compile:sass": "node-sass sass/main.scss css/style.compiled.css",
    "prefix:css":
      "postcss --use autoprefixer -b \"last 10 versions\" css/style.compiled.css -o css/style.prefix.css",
    "compress:css":
      "node-sass css/style.prefix.css css/style.css --output-style compressed",
    "rename:css": "rename-files css \"style.compiled.css\" \"style.css\"",
    "server": "live-server",
    "start":
      "concurrently \"yarn compile:sass && yarn run rename:css && yarn watch:sass\" \"yarn server\"",
    "build:css": "yarn compile:sass && yarn prefix:css && yarn compress:css"
  },
  "author": "Jarrod Kallis",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^7.1.4",
    "concat": "^1.0.3",
    "concurrently": "^3.5.1",
    "node-sass": "^4.5.3",
    "postcss-cli": "^4.1.1",
    "rename-files": "^0.0.2"
  }
}
